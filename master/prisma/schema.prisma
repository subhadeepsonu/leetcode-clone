generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id String @id @default(uuid())
  username String
  email String @unique
  password String
  submissions submissions[]
}

model admin {
  id String @id @default(uuid())
  email String @unique
  password String
}

model questions {
  id String @id @default(uuid())
  question String
  description String @default("") 
  difficulty difficulty @default(easy)
  sampleInput1 String @default("")
  sampleInput2 String @default("")
  sampleOutput1 String @default("")
  sampleOutput2 String @default("")
  tags tags[]
  submissions submissions[]
  testcases testcases[]
}
model tags {
  id String @id @default(uuid())
  name String
  question questions[]
}

enum difficulty {
  easy
  medium
  hard
}
model testcases {
  id String @id @default(uuid())
  input String
  output String
  questionId String
  question questions @relation(fields: [questionId], references: [id])
}

model submissions {
  id String @id @default(uuid())
  code String
  language String
  questionId String
  userId String
  passedcases Int?
  failedcases Int?
  totalcases Int?
  correct Boolean?
  completed Boolean @default(false) 
  createdAt DateTime @default(now())
  question questions @relation(fields: [questionId], references: [id])
  user user @relation(fields: [userId], references: [id])
}



